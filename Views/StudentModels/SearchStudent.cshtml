@model IEnumerable<Student_Manager.Models.StudentModel>

<div class="container p-3">
    <h3>Search Results</h3>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Contact No.
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="5%">@item.StudentId</td>
                        <td width="30%">@item.StudentName</td>
                        <td width="35%">@item.StudentEmail</td>
                        <td width="10%">@item.StudentContact</td>
                        <td width="40%">
                            <a asp-controller="StudentModels" asp-action="Update" asp-route-id="@item.StudentId" class="btn btn-primary">Update</a>
                            <a asp-controller="StudentModels" asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }
</div>
