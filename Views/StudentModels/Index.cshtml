@model IEnumerable<Student_Manager.Models.StudentModel>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-3">
            <h2 class="text-primary">Student List</h2>
        </div>
        <div class="col-6 text-left"> 
            <form class="row" method="get" action="StudentModels/SearchStudent">
                <label class="control-label col-3" for="SearchString">Search Student</label>
                <input class="form-control col-5" name="SearchString" />
                <input class="btn btn-primary col-3" type="submit" style="margin-left:20px"/>
            </form>
        </div>
        <div class="col-2 text-right">
            <a asp-controller="StudentModels" asp-action="Create" class="btn btn-primary">Add Student</a>
        </div>
        
        <div class="col-1 text-right" >
            <a asp-controller="Home" asp-action="Index" class="btn btn-danger">Back</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Id
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        Contact No.
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="5%">@item.StudentId</td>
                        <td width="30%">@item.StudentName</td>
                        <td width="35%">@item.StudentEmail</td>
                        <td width="10%">@item.StudentContact</td>
                        <td width="40%">
                            <a asp-controller="StudentModels" asp-action="Update" asp-route-id="@item.StudentId" class="btn btn-primary">Update</a>
                            <a asp-controller="StudentModels" asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>
